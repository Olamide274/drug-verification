    <!-- Verification Hero Section -->
    <section class="verification-hero py-5 mt-5">
      <div class="container">
        <div class="row justify-content-center text-center">
          <div class="col-lg-8">
            <h1 class="display-4 fw-bold mb-4">Verify Your Medication</h1>
            <p class="lead mb-5">Ensure the authenticity of your medication using our advanced verification system. 
              Simply scan the QR code or enter the serial number below.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Verification Methods Section -->
    <section class="verification-methods py-5">
      <div class="container">
        <div class="row g-4">
          <!-- QR Code Scanner -->
          <div class="col-md-6">
            <div class="card border-0 shadow-lg hover-shadow h-100">
              <div class="card-body p-5 text-center">
                <div class="icon-wrapper mb-4">
                  <i class="fas fa-qrcode fa-3x"></i>
                </div>
                <h3 class="h4 mb-4">Scan QR Code</h3>
                <p class="text-muted mb-4">Use your device's camera to scan the QR code on your medication package</p>
                <div class="qr-scanner-container mb-4">
                  <div class="qr-placeholder">
                    <i class="fas fa-camera fa-2x mb-3"></i>
                    <p>Camera preview will appear here</p>
                  </div>
                </div>
                <button class="btn btn-primary btn-lg px-5">
                  Start Scanner
                  <i class="fas fa-camera ms-2"></i>
                </button>
              </div>
            </div>
          </div>

          <!-- Serial Number Verification -->
          <div class="col-md-6">
            <div class="card border-0 shadow-lg hover-shadow h-100">
              <div class="card-body p-5">
                <div class="icon-wrapper text-center mb-4">
                  <i class="fas fa-barcode fa-3x"></i>
                </div>
                <h3 class="h4 text-center mb-4">Enter Serial Number</h3>
                <p class="text-muted text-center mb-4">Input the serial number found on your medication package</p>
                <form class="verification-form">
                  <div class="form-group mb-4">
                    <label for="serialNumber" class="form-label">Serial Number</label>
                    <input type="text" class="form-control form-control-lg" id="serialNumber" 
                           placeholder="Enter serial number" required>
                    <small class="text-muted">Example: PV-2024-123456</small>
                  </div>
                  <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg px-5">
                      Verify
                      <i class="fas fa-search ms-2"></i>
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>

        <!-- Verification Result Section (Initially Hidden) -->
        <div class="verification-result mt-5" style="display: none;">
          <div class="card border-0 shadow-lg">
            <div class="card-body p-5">
              <div class="row">
                <div class="col-md-4">
                  <img src="placeholder.svg" alt="Medicine Image" class="img-fluid rounded mb-3">
                </div>
                <div class="col-md-8">
                  <h3 class="gradient-text mb-4">Verification Result</h3>
                  <div class="result-details">
                    <div class="mb-3">
                      <strong>Status:</strong>
                      <span class="badge bg-success ms-2">Verified Authentic</span>
                    </div>
                    <div class="mb-3">
                      <strong>Product Name:</strong>
                      <span class="ms-2">Sample Medicine</span>
                    </div>
                    <div class="mb-3">
                      <strong>Manufacturer:</strong>
                      <span class="ms-2">PharmaCorp International</span>
                    </div>
                    <div class="mb-3">
                      <strong>Manufacturing Date:</strong>
                      <span class="ms-2">01/01/2024</span>
                    </div>
                    <div class="mb-3">
                      <strong>Expiry Date:</strong>
                      <span class="ms-2">01/01/2026</span>
                    </div>
                    <div class="mb-3">
                      <strong>Batch Number:</strong>
                      <span class="ms-2">BATCH-2024-001</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- How It Works Section -->
    <section class="how-it-works py-5 bg-light">
      <div class="container">
        <h2 class="text-center mb-5">How It Works</h2>
        <div class="row g-4">
